@using Yurt_Apart_Bul.Models.Siniflar
@model List<Sehirler> 
<div class="padding1">
    <h4>Kısaca</h4>
    <div class="box-left">
        @foreach (var x in Model)
        {
        <div class="bot-img">
            <img src="@x.SehirImage" style="width:120px; height:65px;" alt="" />
        </div>
        <div class="bot-desc">
            <p>@x.Aciklama.Substring(0,75)... </p>
        </div>
        <div class="clear"></div>
        }
    </div>
    @Html.Action("Partial5","Default")
</div>